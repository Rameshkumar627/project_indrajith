<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!--Form View-->
	<record model="ir.ui.view" id="view_product_product_from">
		<field name="name">product.product.form</field>
		<field name="model">product.product</field>
		<field name="arch" type="xml">
			<form string="Product">
				<header>
					<field name="progress" widget="statusbar"/>
					<button name="trigger_approve" string="Confirm" type="object"/>
					<button name="get_stock_quantity" string="Stock" type="object"/>
				</header>
				<sheet>
					<div class="oe_button_box" name="button_box">
						<button class="oe_stat_button" name="get_stock_quantity"
								string="Stock" type="object"
								icon="fa-shopping-cart"/>
						<button class="oe_stat_button" name="get_purchase_price"
								string="Purchase" type="object"
								icon="fa-shopping-basket"/>
						<button class="oe_stat_button" name="get_sales_price"
								string="Sale" type="object"
								icon="fa-money"/>
					</div>
					<separator string="Product" style="text-align:center;"/>
					<field name="code" readonly="1"/>
					<group>
						<field name="name"/>
						<field name="group_id"/>
						<field name="sub_group_id"/>
						<field name="uom_id"/>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<!--Tree View-->
	<record model="ir.ui.view" id="view_product_product_tree">
		<field name="name">product.product.tree</field>
		<field name="model">product.product</field>
		<field name="arch" type="xml">
			<tree string="Product">
				<field name="name"/>
				<field name="code"/>
			</tree>
		</field>
	</record>

	<!--Action-->
	<record model="ir.actions.act_window" id="action_product_product">
        <field name="name">Product</field>
        <field name="res_model">product.product</field>
        <field name="view_type">form</field>
        <field name="limit">50</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>


