<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!--Form View-->
	<record model="ir.ui.view" id="view_product_sub_group_from">
		<field name="name">product.sub.group.form</field>
		<field name="model">product.sub.group</field>
		<field name="arch" type="xml">
			<form string="Product Sub Group">
				<sheet>
					<separator string="Product Sub Group" style="text-align:center;"/>
					<group>
						<field name="group_id" options='{"no_open": True, "no_create": True}'/>
						<field name="name"/>
						<field name="code"/>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<!--Tree View-->
	<record model="ir.ui.view" id="view_product_sub_group_tree">
		<field name="name">product.sub.group.tree</field>
		<field name="model">product.sub.group</field>
		<field name="arch" type="xml">
			<tree string="Product Sub Group">
                <field name="group_id"/>
				<field name="name"/>
				<field name="code"/>
			</tree>
		</field>
	</record>

	<!--Action-->
	<record model="ir.actions.act_window" id="action_product_sub_group">
        <field name="name">Product Sub Group</field>
        <field name="res_model">product.sub.group</field>
        <field name="view_type">form</field>
        <field name="limit">50</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>